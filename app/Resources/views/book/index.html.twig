{% extends 'base.html.twig' %}

{% block body %}
<center>
    <h1>Books list</h1>
    <table border="2px" style="background-color:white" width="400">
        <thead>
            <tr>
                <th>Name</th>
                <th>Author</th>
                <th>Published</th>
                <th>Resume</th>
                <th>Image</th>
            </tr>
        </thead>
        <tbody>
        {% for book in pagination %}
            <tr>
                <td>{{ book.name }}</td>
                <td>{{ book.author }}</td>
                <td>{{ book.published.format('d-m-Y') }}</td>
                <td>{{ book.resume }}</td>
                <td> <img src="/images/{{ book.image }}" width="100" height="100" alt=""/></td>

            </tr>
        {% endfor %}
        {{ knp_pagination_render(pagination) }}

        </tbody>
    </table>
</center>


{% endblock %}
